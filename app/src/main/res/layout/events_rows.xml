<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="5dp"
    android:paddingBottom="20dp"
    >


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EventTimeClock"
        android:paddingTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="65sp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/colorClock"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventAddButton"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_add_alert_white_24dp"
        android:layout_alignBottom="@+id/EventDateList"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:paddingRight="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/alarm_name"
        android:id="@+id/EventNameList"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/EventTimeClock"
        android:layout_alignStart="@+id/EventTimeClock"
        android:fontFamily="sans-serif"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_eta"
        android:id="@+id/EventDateList"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/EventNameList"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>
