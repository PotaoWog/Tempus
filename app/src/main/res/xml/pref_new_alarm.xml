<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="ALARM INFORMATION"
        android:key="alarm_information_category">
        <ListPreference
            android:defaultValue="0:00"
            android:entries="@array/pref_lang_titles"
            android:entryValues="@array/pref_lang_values"
            android:key="alarm_time"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Time" />

        <EditTextPreference
            android:title="Label"
            android:key="alarm_name"
            android:dialogTitle="Alarm name"
            android:dialogMessage="Set a new name for the alarm"
            android:defaultValue="Alarm"/>

        <ListPreference
            android:defaultValue="Never"
            android:entries="@array/pref_lang_titles"
            android:entryValues="@array/pref_lang_values"
            android:key="alarm_repeat"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Repeat" />

        <RingtonePreference
            android:title="Ringtone"
            android:key="alarm_ringtone"
            android:ringtoneType="all"
            />

        <SwitchPreference
            android:defaultValue="true"
            android:key="alarm_snooze"
            android:title="snooze" />

        <ListPreference
            android:defaultValue="Normal"
            android:entries="@array/pref_lang_titles"
            android:entryValues="@array/pref_lang_values"
            android:key="alarm_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Type" />
    </PreferenceCategory>

    <PreferenceCategory android:title="BASED TRAFFIC INFORMATION">
        <EditTextPreference
            android:title="Event Location"
            android:key="event_location"
            android:dialogTitle="Alarm name"
            android:dialogMessage="Set a new name for the alarm"
            android:defaultValue="Alarm"/>

        <EditTextPreference
            android:title="Start time"
            android:key="event_start_time"
            android:dialogTitle="Alarm name"
            android:dialogMessage="Set a new name for the alarm"
            android:defaultValue="13:30"/>

        <EditTextPreference
            android:title="End Time"
            android:key="event_end_time"
            android:dialogTitle="Alarm name"
            android:dialogMessage="Set a new name for the alarm"
            android:defaultValue="15:30"/>
    </PreferenceCategory>

</PreferenceScreen>
